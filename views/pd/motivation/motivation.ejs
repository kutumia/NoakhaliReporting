<script type="text/javascript">
   
    $("body").on("click", "#btnExport", function () {
        html2canvas($('#tblCustomers')[0], {
            onrendered: function (canvas) {
                var data = canvas.toDataURL();
                var docDefinition = {
                    content: [{
                        image: data,
                        width: 650
                    }]
                };
                pdfMake.createPdf(docDefinition).download("farmer-details.pdf");
            }
        });
    });

    $('#district').on("change",function () {
        var district = $('#district').val();
        $.ajax({
            type: "POST",
            url: "/pd/motivationDistrictFilter",
            data: {district: district},
            datatype: "json",
            beforeSend: function() {
                // setting a timeout
                $('#loading').show();
                $('#output').hide();
            },
            success: function (data) {
                $('#output').html(data);
                $('#tblCustomers').DataTable();
                $('#upazilla').empty();
                if(data){
                    $.each(data, function(key, value){
                    $('#upazilla').append('<option value="'+value.id+'">' + value.upazilla + '</option>');

                });
                }else {
                    $('#upazilla').empty();
                }

            },
            complete: function() {
                $('#loading').hide();
                $('#output').show();
            }
        });
    });

    $("#wrapper").load( "no url rn",function() {
        
        var year = $('#year').val();
        var batch = $('#batch').val();        var upazilla = $('#upazilla').val();
        $.ajax({
            type: "POST",
            url: "/pd/motivationFilter",
            data: {year: year,upazilla:upazilla,batch:batch},
            datatype: "json",
            beforeSend: function() {
                // setting a timeout
                $('#loading').show();
                $('#output').hide();

            },
            success: function (data) {
                $('#output').html(data);
                $('#tblCustomers').DataTable();
            },
            complete: function() {
                $('#loading').hide();
                $('#output').show();
            }
        });
    });

    $('#submit').on("click",function () {
        var year = $('#year').val();
        var batch = $('#batch').val();        var upazilla = $('#upazilla').val();
        $.ajax({
            type: "POST",
            url: "/pd/motivationFilter",
            data: {year: year,upazilla:upazilla,batch:batch},
            datatype: "json",
            beforeSend: function() {
                // setting a timeout
                $('#loading').show();
                $('#output').hide();
            },
            success: function (data) {
                $('#output').html(data);
                $('#tblCustomers').DataTable();
            },
            complete: function() {
                $('#loading').hide();
                $('#output').show();
            }
        });
    });

    $(document).ready(function() {
        $('#tblCustomers').DataTable();
    } );

    

</script>