<%- include('../../includes/header')-%>
        <div class="wrapper">
          <%- include('../../includes/topbar')-%>
            <div class="page-wrap">
              <%- include('../../includes/sidebar')-%>
              <div class="main-content">
                <div class="container-fluid">
                    <div class="row clearfix">
                    <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <div class="panel-title"><h2>উদ্বুদ্ধকরণ ভ্রমণ তথ্য ফর্ম</h2></div>
                                <p><%
                                if(success !=''){ %>
                                <%= success %>
                                    <% } %>
                                </p>
                                </div>  
                            <div class="panel-body" >
                                <form action="/upazilla/motivationFormPost" id="FieldTrialForm" class="form-horizontal" method="post"  role="form">
                                    <div id="signupalert" style="display:none" class="alert alert-danger">
                                        <p>Error:</p>
                                        <span></span>
                                    </div>

                                    <input type="hidden" class="form-control" name="district" placeholder="জেলার নাম" value="<%=dds%>">
                                    <input type="hidden" class="form-control" name="upazilla" placeholder="উপজেলার নাম" value="<%=upazillas%>">
                                    

                                    <div class="form-group">
                                        <label for="name" class="col-md-3 control-label">কৃষকের/কৃষাণির নাম ও পিতা/স্বামীর নাম</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="name" placeholder="কৃষকের/কৃষাণির নাম ও পিতা/স্বামীর নাম">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="nid" class="col-md-3 control-label">জাতীয় পরিচয়পত্র নম্বর</label>
                                        <div class="col-md-9">
                                        <input type="text" class="form-control" name="nid" placeholder="জাতীয় পরিচয়পত্র নম্বর ">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="village" class="col-md-3 control-label">গ্রাম/ব্লক</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="village" placeholder="গ্রাম/ব্লক "> 
                                        </div>
                                    </div>
                                
                                    <div class="form-group">
                                        <label for="mobile" class="col-md-3 control-label">মোবাইল নম্বর</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="mobile" placeholder="মোবাইল নম্বর ">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="podobi" class="col-md-3 control-label">উদ্বোধণকারীর নাম ও পদবী</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="podobi" placeholder="উদ্বোধণকারীর নাম ও পদবী"> 
                                        </div>
                                    </div>
                                
                                    <div class="form-group">
                                        <label for="bornona" class="col-md-3 control-label">ভ্রমণকৃত স্থানের নাম ও বর্ণনা</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="bornona" placeholder="ভ্রমণকৃত স্থানের নাম ও বর্ণনা">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="comment" class="col-md-3 control-label">মন্তব্য</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="comment" placeholder="মন্তব্য">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-9">
                                            <label for="year">বছর :</label>
                                        <select id="year" name="year" required>
                                            <option value="2017">২০১৭-১৮</option>
                                            <option value="2018">২০১৮-১৯</option>
                                            <option value="2019">২০১৯-২০</option>
                                            <option value="2020">২০২০-২১</option>
                                            <option value="2021">২০২১-২২</option>
                                            <option value="2022">২০২২-২৩</option>
                                        </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="batch" class="col-md-3 control-label">ব্যাচ নং</label>
                                        <div class="col-md-9">
                                            <label for="batch">Choose a batch no:</label>
                                        <select id="batch" name="batch" required>
                                            <option value="">Choose batch</option>
                                            <option value="01">01</option>
                                            <option value="02">02</option>
                                            <option value="03">03</option>
                                            <option value="04">04</option>
                                            <option value="05">05</option>
                                            <option value="06">06</option>
                                            <option value="07">07</option>
                                            <option value="08">08</option>
                                            <option value="09">09</option>
                                            <option value="10">10</option>
                                        </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-9">
                                            <input type="hidden" class="form-control" name="user_id" placeholder="id" value="<%= user_id %>">
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <!-- Button -->                                        
                                        <div class="col-md-offset-3 col-md-9">
                                        <input type="submit" name="submit" value="submit" class="btn btn-primary">   
                                        </div>
                                    </div>
                                    
                                    
                                        
                                    
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('../../includes/footer')-%>